<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/game_result_dialog_background"
    tools:context=".GameResultDialogFragment">

    <TextView
        android:id="@+id/tv_game_result"
        style="@style/game_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выйграл крестик!" />

    <Button
        android:id="@+id/btn_game_restart"
        style="@style/game_restart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Начать заново"/>

</LinearLayout>